
md-content(layout='column', layout-fill)
    md-toolbar.nav-submenu(ng-swipe-right='prevDay()', ng-swipe-left='nextDay()')
        .md-toolbar-tools(layout='row', layout-fill)
            md-button(ng-click='prevDay()')
                i.fa.fa-caret-left
                md-tooltip {{ "Previous day" | translate }}
            md-button(flex, ng-click='showCalendar()')
                i.fa.fa-calendar(hide-gt-sm)
                span(hide-sm) &nbsp; {{ "Select date" | translate }}
                md-tooltip {{ "Select date" | translate }}
            md-button(flex, ng-click='goToReport()')
                i.fa.fa-calculator(hide-gt-sm)
                span(hide-sm) &nbsp; {{ "Go to report" | translate }}
                md-tooltip {{ "Go to report" | translate }}
            md-button(ng-click='nextDay()')
                i.fa.fa-caret-right
                md-tooltip {{ "Next day" | translate }}
    md-subheader.md-primary(ng-swipe-right='prevDay()', ng-swipe-left='nextDay()')
        span {{ date|dateLocale:'EEEE, MMMM d, yyyy' }}
    md-content
        md-list.padded
            md-item
                md-item-content(ng-swipe-left='increment("h", -1)', ng-swipe-right='increment("h", 1)')
                    .md-tile-left {{ day.h }}
                    .md-tile-content(layout='row')
                        div {{ "Hours" | translate:lang }}
                        div(flex)
                        div(hide-sm)
                            md-button(ng-show='day.h', ng-click='increment("h", -1)')
                                span.fa.fa-minus
                                md-tooltip {{ "Subtract" | translate }}
                            md-button(ng-click='increment("h", 1)')
                                span.fa.fa-plus
                                md-tooltip {{ "Add" | translate }}
            md-item
                md-item-content(ng-swipe-left='increment("p", -1)', ng-swipe-right='increment("p", 1)')
                    .md-tile-left {{ day.p }}
                    .md-tile-content(layout='row')
                        div {{ "Hours (planned)" | translate }}
                        div(flex)
                        div(hide-sm)
                            md-button(ng-show='day.p', ng-click='increment("p", -1)')
                                span.fa.fa-minus
                                md-tooltip {{ "Subtract" | translate }}
                            md-button(ng-click='increment("p", 1)')
                                span.fa.fa-plus
                                md-tooltip {{ "Add" | translate }}
            md-item
                md-item-content(ng-swipe-left='increment("m", -1)', ng-swipe-right='increment("m", 1)')
                    .md-tile-left {{ day.m }}
                    .md-tile-content(layout='row')
                        div {{ "Magazines" | translate }}
