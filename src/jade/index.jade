doctype html
html.no-js(lang='{{ language.current }}', ng-app='ministryApp', ng-csp, ng-cloak)
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title {{ "Service App" | translate:language.translator.current }}
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1')
        link(rel='icon', href='img/logo.svg', sizes='any')
        link(rel='stylesheet', href='css/app.css')
    body(layout='column', layout-fill)
        section(layout='row', layout-fill, flex)
            md-sidenav.md-sidenav-left.md-whiteframe-z1(md-component-id='left', md-is-locked-open="$media('gt-sm')")
                md-toolbar
                    .md-toolbar-tools
                        h3.no-break(flex) {{ "Navigation" | translate:language.translator.current }}
                        md-button.icon(hide-gt-md, ng-click='closeNav()', aria-label='Close nav')
                            span.fa.fa-times
                md-content
                    md-list
                        md-item.link.padded
                            md-item-content
                                a.no-break(ng-link='/calendar')
                                    i.fa.fa-fw.fa-calendar
                                    | {{ "Calendar" | translate:language.translator.current }}
                            md-divider
                        md-item.link.padded
                            md-item-content
                                a.no-break(ng-link='/report')
                                    i.fa.fa-fw.fa-calculator
                                    | {{ "Report" | translate:language.translator.current }}
                            md-divider
                        md-item.link.padded
                            md-item-content
                                a.no-break(ng-link='/return-visits')
                                    i.fa.fa-fw.fa-users
                                    | {{ "Return visits" | translate:language.translator.current }}
                            md-divider
                        md-item.link.padded
                            md-item-content
                                a.no-break(ng-link='/settings')
                                    i.fa.fa-fw.fa-cogs
                                    | {{ "Settings" | translate:language.translator.current }}
                            md-divider
                        md-item.link.padded
                            md-item-content
                                a.no-break(href='https://github.com/BitolaCo/service-app/issues')
                                    i.fa.fa-fw.fa-question
                                    | {{ "Help" | translate:language.translator.current }}
                            md-divider
            md-content(flex, layout='row')
                div(layout='column', layout-fill)
                    md-toolbar.main-nav
                        .md-toolbar-tools
                            md-button.icon(ng-click='toggleNav()', hide-gt-sm, aria-label='Toggle side nav')
                                i.fa.fa-bars
                            h3.no-break.text-center(flex, hide-gt-sm, aria-label='Service App') {{ "Service App" | translate:language.translator.current }}
                            h3.no-break.text-left.app-title(flex, hide-sm, aria-label='Service App')
                                img(src='/img/logo.svg', alt='{{ "Service App" | translate:language.translator.current }}')
                                span {{ "Service App" | translate:language.translator.current }}
                    md-content(ng-view, layout='column', layout-fill, flex)
        script(src='js/app.js')
